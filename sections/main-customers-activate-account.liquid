{% comment %} Section: Customer Activate Account {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>Activate your account</h1>
    </div>
    {%- form 'activate_customer_password', class: 'contact-form' -%}
      {%- if form.errors -%}
        <div style="background:var(--color-error);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="alert">{{ form.errors | default_errors }}</div>
      {%- endif -%}
      <div class="form-group"><label class="form-label" for="activate-password">Password</label><input type="password" id="activate-password" name="customer[password]" class="form-input" required></div>
      <div class="form-group"><label class="form-label" for="activate-password-confirm">Confirm password</label><input type="password" id="activate-password-confirm" name="customer[password_confirmation]" class="form-input" required></div>
      <button type="submit" class="btn btn--primary btn--lg">Activate account</button>
      <button type="submit" name="decline" class="btn btn--ghost" style="margin-left:var(--space-4)">Decline</button>
    {%- endform -%}
  </div>
</section>

{% schema %}{"name":"Activate Account","settings":[]}{% endschema %}
