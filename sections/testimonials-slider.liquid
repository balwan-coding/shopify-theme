{% comment %}
  Section: Testimonials Slider
  GSAP-animated testimonials carousel
{% endcomment %}

<section class="section testimonials" aria-labelledby="testimonials-title">
  <div class="container">

    <div class="section-header anim-fade-up">
      {%- if section.settings.eyebrow != blank -%}
        <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      {%- endif -%}
      <h2 id="testimonials-title">{{ section.settings.title | default: 'What Customers Say' }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p>{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div style="overflow:hidden">
      <div class="testimonials-track" aria-live="polite">
        {%- for block in section.blocks -%}
          <div
            class="testimonial-card"
            {{ block.shopify_attributes }}
            role="article"
            aria-label="Testimonial {{ forloop.index }}"
          >
            <div class="rating-stars" aria-label="{{ block.settings.rating }} out of 5 stars">
              {%- for i in (1..5) -%}
                <svg class="rating-star" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="width:16px;height:16px;{% if i > block.settings.rating %}opacity:0.25{% endif %}">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {%- endfor -%}
            </div>

            <blockquote class="testimonial-quote">
              "{{ block.settings.quote }}"
            </blockquote>

            <div class="testimonial-author">
              {%- if block.settings.avatar != blank -%}
                <div class="testimonial-avatar">
                  {{
                    block.settings.avatar
                    | image_url: width: 100
                    | image_tag:
                      loading: 'lazy',
                      width: 48,
                      height: 48,
                      alt: block.settings.author_name | default: 'Customer'
                  }}
                </div>
              {%- else -%}
                <div class="testimonial-avatar" style="display:flex;align-items:center;justify-content:center;background:var(--color-accent);color:white;font-weight:700;font-size:var(--text-sm)">
                  {{ block.settings.author_name | default: 'C' | slice: 0 }}
                </div>
              {%- endif -%}

              <div class="testimonial-author-info">
                <span class="testimonial-author-name">{{ block.settings.author_name }}</span>
                {%- if block.settings.author_title != blank -%}
                  <span class="testimonial-author-title">{{ block.settings.author_title }}</span>
                {%- endif -%}
                {%- if block.settings.verified -%}
                  <span style="font-size:var(--text-xs);color:var(--color-success);font-weight:600">âœ“ Verified Buyer</span>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- else -%}
          {%- for i in (1..3) -%}
            <div class="testimonial-card">
              <div class="rating-stars">
                {%- for s in (1..5) -%}
                  <svg class="rating-star" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="width:16px;height:16px">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {%- endfor -%}
              </div>
              <blockquote class="testimonial-quote">"Absolutely love these products. The quality exceeded my expectations and customer service was fantastic!"</blockquote>
              <div class="testimonial-author">
                <div class="testimonial-avatar" style="display:flex;align-items:center;justify-content:center;background:var(--color-accent);color:white;font-weight:700">C</div>
                <div class="testimonial-author-info">
                  <span class="testimonial-author-name">Customer {{ i }}</span>
                  <span class="testimonial-author-title">Verified Buyer</span>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endfor -%}
      </div>
    </div>

    <div class="slider-controls" aria-label="Slider controls">
      <button class="slider-btn" data-slider-prev aria-label="Previous testimonial">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="slider-dots" role="tablist" aria-label="Testimonial navigation">
        {%- for block in section.blocks -%}
          <button
            class="slider-dot {% if forloop.first %}active{% endif %}"
            role="tab"
            aria-label="Go to testimonial {{ forloop.index }}"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
          ></button>
        {%- else -%}
          <button class="slider-dot active" role="tab" aria-label="Go to testimonial 1" aria-selected="true"></button>
          <button class="slider-dot" role="tab" aria-label="Go to testimonial 2" aria-selected="false"></button>
          <button class="slider-dot" role="tab" aria-label="Go to testimonial 3" aria-selected="false"></button>
        {%- endfor -%}
      </div>

      <button class="slider-btn" data-slider-next aria-label="Next testimonial">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Testimonials Slider",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Reviews"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "default": 5,
          "label": "Star rating"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Absolutely love this product! The quality exceeded my expectations."
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Author avatar"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author name",
          "default": "Happy Customer"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author title/role",
          "default": "Verified Buyer"
        },
        {
          "type": "checkbox",
          "id": "verified",
          "default": true,
          "label": "Show verified badge"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Slider",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
