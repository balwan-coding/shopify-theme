{% comment %} Section: Customer Order (uses order object from template) {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>Order {{ order.name }}</h1>
      <p style="color:var(--color-text-muted)">Placed on {{ order.created_at | date: '%B %d, %Y' }}</p>
    </div>
    <div style="margin-bottom:var(--space-8)">
      <h2 style="font-size:var(--text-xl);margin-bottom:var(--space-4)">Order details</h2>
      {%- for line_item in order.line_items -%}
        <div style="display:flex;gap:var(--space-6);padding:var(--space-6);border-bottom:1px solid var(--color-border)">
          {%- if line_item.image -%}
            {{ line_item.image | image_url: width: 120 | image_tag: width: 80, height: 80, style: 'object-fit:cover;border-radius:var(--radius-sm)' }}
          {%- endif -%}
          <div style="flex:1">
            <a href="{{ line_item.product.url }}">{{ line_item.product.title }}</a>
            <p style="font-size:var(--text-sm);color:var(--color-text-muted)">{{ line_item.variant.title }}</p>
          </div>
          <div>{{ line_item.final_line_price | money }} × {{ line_item.quantity }}</div>
        </div>
      {%- endfor -%}
    </div>
    <div style="padding:var(--space-6);background:var(--color-bg-2);border-radius:var(--radius-md);margin-bottom:var(--space-8)">
      <p><strong>Subtotal:</strong> {{ order.line_items_subtotal_price | money }}</p>
      <p><strong>Total:</strong> {{ order.total_price | money }}</p>
    </div>
    <p><a href="{{ routes.account_url }}/orders">← Back to orders</a></p>
  </div>
</section>

{% schema %}{"name":"Order","settings":[]}{% endschema %}
