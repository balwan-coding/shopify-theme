{% comment %} Section: Customer Reset Password {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>Reset your password</h1>
    </div>
    {%- form 'recover_customer_password', class: 'contact-form' -%}
      {%- if form.errors -%}
        <div style="background:var(--color-error);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="alert">{{ form.errors | default_errors }}</div>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <p style="color:var(--color-success);margin-bottom:var(--space-6)">We've sent you an email with a link to reset your password.</p>
      {%- else -%}
        <div class="form-group"><label class="form-label" for="recover-email">Email</label><input type="email" id="recover-email" name="customer[email]" class="form-input" autocomplete="email" required></div>
        <button type="submit" class="btn btn--primary btn--lg">Send reset link</button>
      {%- endif -%}
    {%- endform -%}
    <p style="margin-top:var(--space-8)"><a href="{{ routes.account_login_url }}">‚Üê Back to login</a></p>
  </div>
</section>

{% schema %}{"name":"Reset Password","settings":[]}{% endschema %}
