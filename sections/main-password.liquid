{% comment %}
  Section: Main Password
  Password page for locked stores
{% endcomment %}

<div style="min-height:100vh;display:flex;align-items:center;justify-content:center;padding:var(--space-20);background:var(--color-bg-2)">
  <div style="max-width:480px;width:100%;text-align:center">
    <h1 style="margin-bottom:var(--space-4)">{{ shop.name }}</h1>
    <p style="color:var(--color-text-muted);margin-bottom:var(--space-8)">{{ section.settings.message | default: 'This store will be open soon. Enter your password to preview.' }}</p>

    {%- form 'storefront_password', class: 'password-form' -%}
      {%- if form.errors -%}
        <div style="background:var(--color-error);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="alert">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div style="display:flex;gap:var(--space-3);margin-bottom:var(--space-6)">
        <input
          type="password"
          name="password"
          class="form-input"
          placeholder="Enter password"
          style="flex:1"
          aria-label="Store password"
        >
        <button type="submit" class="btn btn--primary">Enter</button>
      </div>
    {%- endform -%}

    <p style="font-size:var(--text-sm);color:var(--color-text-light)">Are you the store owner? <a href="/admin" style="color:var(--color-accent)">Log in here</a></p>
  </div>
</div>

{% schema %}
{
  "name": "Password",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "This store will be open soon. Enter your password to preview."
    }
  ]
}
{% endschema %}
