{% comment %}
  Section: Main Cart
  Full cart page when cart_type is "page"
{% endcomment %}

<section class="section">
  <div class="container container--narrow">
    <h1 class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">Your Cart</h1>

    {%- if cart.item_count == 0 -%}
      <div style="text-align:center;padding:var(--space-20);background:var(--color-bg-2);border-radius:var(--radius-lg)">
        <p style="font-size:var(--text-xl);margin-bottom:var(--space-4);color:var(--color-text-muted)">Your cart is empty</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">Continue Shopping</a>
      </div>
    {%- else -%}
      {%- form 'cart', cart, id: 'cart-form', data-cart-form: '' -%}
        <div style="display:flex;flex-direction:column;gap:var(--space-8)">
          {%- for item in cart.items -%}
            <div class="cart-item cart-item--page" style="display:grid;grid-template-columns:120px 1fr auto;gap:var(--space-6);align-items:center;padding:var(--space-6);border:1px solid var(--color-border);border-radius:var(--radius-md);background:var(--color-bg)">
              <a href="{{ item.url }}">
                {%- if item.image -%}
                  {{ item.image | image_url: width: 240 | image_tag: loading: 'lazy', width: 120, height: 120, style: 'object-fit:cover;border-radius:var(--radius-sm)', alt: item.title }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </a>
              <div>
                <a href="{{ item.url }}" style="font-weight:600;font-size:var(--text-lg)">{{ item.product.title }}</a>
                {%- unless item.variant.title == 'Default Title' -%}
                  <p style="font-size:var(--text-sm);color:var(--color-text-muted);margin-top:var(--space-1)">{{ item.variant.title }}</p>
                {%- endunless -%}
                <p style="font-size:var(--text-base);margin-top:var(--space-2)">{{ item.final_line_price | money }}</p>
              </div>
              <div>
                <div class="quantity-control" role="group" style="display:flex;align-items:center;gap:0;border:1px solid var(--color-border);border-radius:var(--radius-sm)">
                  <button type="button" class="quantity-btn" data-cart-qty-minus aria-label="Decrease quantity" style="padding:var(--space-2) var(--space-3);cursor:pointer">âˆ’</button>
                  <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" class="quantity-input" data-cart-qty-input style="width:48px;text-align:center;border:none;background:transparent" aria-label="Quantity for {{ item.title }}">
                  <button type="button" class="quantity-btn" data-cart-qty-plus aria-label="Increase quantity" style="padding:var(--space-2) var(--space-3);cursor:pointer">+</button>
                </div>
                <a href="{{ item.url_to_remove }}" style="font-size:var(--text-sm);color:var(--color-text-muted);margin-top:var(--space-2);display:inline-block" aria-label="Remove {{ item.title }}">Remove</a>
              </div>
            </div>
          {%- endfor -%}
        </div>

        <div style="margin-top:var(--space-12);padding-top:var(--space-8);border-top:1px solid var(--color-border);display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:var(--space-6)">
          <div>
            <p style="font-size:var(--text-xl);font-weight:700">Subtotal: {{ cart.total_price | money }}</p>
            <p style="font-size:var(--text-sm);color:var(--color-text-muted);margin-top:var(--space-1)">Taxes and shipping calculated at checkout</p>
          </div>
          <div style="display:flex;gap:var(--space-4)">
            <button type="submit" name="update" class="btn btn--secondary">Update Cart</button>
            <button type="submit" name="checkout" class="btn btn--primary">Checkout</button>
          </div>
        </div>
      {%- endform -%}
    {%- endif -%}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-cart-qty-minus], [data-cart-qty-plus]').forEach(btn => {
      btn.addEventListener('click', () => {
        const row = btn.closest('.cart-item--page');
        const input = row?.querySelector('input[name="updates[]"]');
        if (!input) return;
        let val = parseInt(input.value) || 0;
        if (btn.dataset.cartQtyMinus !== undefined && val > 0) val--;
        if (btn.dataset.cartQtyPlus !== undefined) val++;
        input.value = val;
      });
    });
  });
</script>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
