{% comment %} Section: Customer Account {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>{{ 'account.my_account' | t }}</h1>
      <p style="color:var(--color-text-muted)">Welcome back, {{ customer.first_name }}</p>
    </div>
    <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:var(--space-6)">
      <a href="{{ routes.account_orders_url }}" class="btn btn--secondary btn--full" style="padding:var(--space-8);text-align:center;flex-direction:column;gap:var(--space-2)">
        <span style="font-size:var(--text-2xl)">ğŸ“¦</span>
        {{ 'account.orders' | t }}
      </a>
      <a href="{{ routes.account_addresses_url }}" class="btn btn--secondary btn--full" style="padding:var(--space-8);text-align:center;flex-direction:column;gap:var(--space-2)">
        <span style="font-size:var(--text-2xl)">ğŸ“</span>
        {{ 'account.addresses' | t }}
      </a>
    </div>
    <p style="margin-top:var(--space-8);font-size:var(--text-sm);color:var(--color-text-muted)">
      <a href="{{ routes.account_logout_url }}" style="color:var(--color-text-muted)">{{ 'account.logout' | t }}</a>
    </p>
  </div>
</section>

{% schema %}{"name":"Account","settings":[]}{% endschema %}
