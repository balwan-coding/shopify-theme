{% comment %}
  Section: Contact Page
  Animated contact form with Google Maps
{% endcomment %}

<section class="section">
  <div class="container">
    <div class="section-header anim-fade-up">
      <span class="eyebrow">{{ section.settings.eyebrow | default: "Get In Touch" }}</span>
      <h1>{{ section.settings.title | default: "Contact Us" }}</h1>
      {%- if section.settings.subtitle != blank -%}
        <p>{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div style="display:grid;grid-template-columns:1fr 1fr;gap:var(--space-16);align-items:start" class="anim-fade-up">

      <!-- Contact Info -->
      <div style="display:flex;flex-direction:column;gap:var(--space-8)">
        {%- if section.settings.address != blank -%}
          <div style="display:flex;gap:var(--space-4)">
            <div style="width:48px;height:48px;background:var(--color-bg-2);border-radius:var(--radius-md);display:flex;align-items:center;justify-content:center;flex-shrink:0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px;color:var(--color-accent)">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div>
              <h3 style="font-size:var(--text-sm);font-weight:700;margin-bottom:var(--space-1)">Address</h3>
              <p style="color:var(--color-text-muted);font-size:var(--text-sm)">{{ section.settings.address }}</p>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.email != blank -%}
          <div style="display:flex;gap:var(--space-4)">
            <div style="width:48px;height:48px;background:var(--color-bg-2);border-radius:var(--radius-md);display:flex;align-items:center;justify-content:center;flex-shrink:0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px;color:var(--color-accent)">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div>
              <h3 style="font-size:var(--text-sm);font-weight:700;margin-bottom:var(--space-1)">Email</h3>
              <a href="mailto:{{ section.settings.email }}" style="color:var(--color-text-muted);font-size:var(--text-sm);transition:color 0.2s" onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-text-muted)'">
                {{ section.settings.email }}
              </a>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.phone != blank -%}
          <div style="display:flex;gap:var(--space-4)">
            <div style="width:48px;height:48px;background:var(--color-bg-2);border-radius:var(--radius-md);display:flex;align-items:center;justify-content:center;flex-shrink:0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px;color:var(--color-accent)">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12a19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 3.6 1h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 8.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div>
              <h3 style="font-size:var(--text-sm);font-weight:700;margin-bottom:var(--space-1)">Phone</h3>
              <a href="tel:{{ section.settings.phone }}" style="color:var(--color-text-muted);font-size:var(--text-sm);transition:color 0.2s" onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-text-muted)'">
                {{ section.settings.phone }}
              </a>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.hours != blank -%}
          <div style="display:flex;gap:var(--space-4)">
            <div style="width:48px;height:48px;background:var(--color-bg-2);border-radius:var(--radius-md);display:flex;align-items:center;justify-content:center;flex-shrink:0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:20px;height:20px;color:var(--color-accent)">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div>
              <h3 style="font-size:var(--text-sm);font-weight:700;margin-bottom:var(--space-1)">Business Hours</h3>
              <p style="color:var(--color-text-muted);font-size:var(--text-sm)">{{ section.settings.hours }}</p>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.map_embed != blank -%}
          <div style="border-radius:var(--radius-lg);overflow:hidden;height:250px;border:1px solid var(--color-border)">
            {{ section.settings.map_embed }}
          </div>
        {%- endif -%}
      </div>

      <!-- Contact Form -->
      <div>
        {%- form 'contact', id: 'contact-form' -%}

          {%- if form.posted_successfully? -%}
            <div style="background:var(--color-success);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="status">
              âœ“ {{ section.settings.success_message | default: "Thanks for reaching out! We'll get back to you within 24 hours." }}
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div style="background:var(--color-error);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="alert">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label class="form-label" for="contact-name">Name <span aria-hidden="true">*</span></label>
                <input
                  class="form-input"
                  type="text"
                  id="contact-name"
                  name="contact[name]"
                  autocomplete="name"
                  value="{{ form.name }}"
                  required
                  aria-required="true"
                >
              </div>
              <div class="form-group">
                <label class="form-label" for="contact-email">Email <span aria-hidden="true">*</span></label>
                <input
                  class="form-input"
                  type="email"
                  id="contact-email"
                  name="contact[email]"
                  autocomplete="email"
                  value="{{ form.email }}"
                  required
                  aria-required="true"
                >
              </div>
            </div>

            <div class="form-group">
              <label class="form-label" for="contact-subject">Subject</label>
              <input
                class="form-input"
                type="text"
                id="contact-subject"
                name="contact[subject]"
              >
            </div>

            <div class="form-group">
              <label class="form-label" for="contact-message">Message <span aria-hidden="true">*</span></label>
              <textarea
                class="form-textarea"
                id="contact-message"
                name="contact[body]"
                required
                aria-required="true"
              >{{ form.body }}</textarea>
            </div>

            <button type="submit" class="btn btn--primary btn--lg btn--full">
              Send Message
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="width:18px;height:18px">
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
            </button>
          </div>

        {%- endform -%}
      </div>
    </div>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .contact-layout { grid-template-columns: 1fr !important; }
  }
</style>

{% schema %}
{
  "name": "Contact Page",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Get In Touch"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone number"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Business hours"
    },
    {
      "type": "html",
      "id": "map_embed",
      "label": "Google Maps embed code"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message"
    }
  ],
  "presets": [
    {
      "name": "Contact Page"
    }
  ]
}
{% endschema %}
