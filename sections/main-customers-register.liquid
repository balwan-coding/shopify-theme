{% comment %} Section: Customer Register {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>{{ 'account.create' | t }}</h1>
    </div>
    {%- form 'create_customer', class: 'contact-form' -%}
      {%- if form.errors -%}
        <div style="background:var(--color-error);color:white;padding:var(--space-4);border-radius:var(--radius-md);margin-bottom:var(--space-6)" role="alert">{{ form.errors | default_errors }}</div>
      {%- endif -%}
      <div class="form-group"><label class="form-label" for="register-first">First name</label><input type="text" id="register-first" name="customer[first_name]" class="form-input" autocomplete="given-name"></div>
      <div class="form-group"><label class="form-label" for="register-last">Last name</label><input type="text" id="register-last" name="customer[last_name]" class="form-input" autocomplete="family-name"></div>
      <div class="form-group"><label class="form-label" for="register-email">Email</label><input type="email" id="register-email" name="customer[email]" class="form-input" autocomplete="email" required></div>
      <div class="form-group"><label class="form-label" for="register-password">Password</label><input type="password" id="register-password" name="customer[password]" class="form-input" autocomplete="new-password" required></div>
      <button type="submit" class="btn btn--primary btn--lg">Create account</button>
    {%- endform -%}
    <p style="margin-top:var(--space-8);font-size:var(--text-sm);color:var(--color-text-muted)">Already have an account? <a href="{{ routes.account_login_url }}" style="color:var(--color-accent)">{{ 'account.login' | t }}</a></p>
  </div>
</section>

{% schema %}{"name":"Register","settings":[]}{% endschema %}
