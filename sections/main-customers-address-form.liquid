{% comment %} Section: Customer Address Form (new/edit) {% endcomment %}
<section class="section">
  <div class="container container--narrow">
    <div class="section-header anim-fade-up" style="margin-bottom:var(--space-12)">
      <h1>{% if form_address.id %}{{ 'account.addresses' | t }} â€“ Edit{% else %}Add new address{% endif %}</h1>
    </div>
    {%- assign form_address = address | default: customer.new_address -%}
    {%- form 'customer_address', form_address, class: 'contact-form' -%}
      <div class="form-row">
        <div class="form-group"><label class="form-label" for="address-first">First name</label><input type="text" id="address-first" name="address[first_name]" value="{{ form_address.first_name }}" class="form-input"></div>
        <div class="form-group"><label class="form-label" for="address-last">Last name</label><input type="text" id="address-last" name="address[last_name]" value="{{ form_address.last_name }}" class="form-input"></div>
      </div>
      <div class="form-group"><label class="form-label" for="address-company">Company</label><input type="text" id="address-company" name="address[company]" value="{{ form_address.company }}" class="form-input"></div>
      <div class="form-group"><label class="form-label" for="address-address1">Address</label><input type="text" id="address-address1" name="address[address1]" value="{{ form_address.address1 }}" class="form-input" required></div>
      <div class="form-group"><label class="form-label" for="address-address2">Apartment, suite, etc.</label><input type="text" id="address-address2" name="address[address2]" value="{{ form_address.address2 }}" class="form-input"></div>
      <div class="form-row">
        <div class="form-group"><label class="form-label" for="address-city">City</label><input type="text" id="address-city" name="address[city]" value="{{ form_address.city }}" class="form-input" required></div>
        <div class="form-group"><label class="form-label" for="address-country">Country</label><select id="address-country" name="address[country]" class="form-input" data-address-country required>{{ country_option_tags }}</select></div>
        <div class="form-group" id="address-province-container" style="{% if form_address.province == blank %}display:none{% endif %}"><label class="form-label" for="address-province">Province</label><select id="address-province" name="address[province]" class="form-input" data-address-province>{{ form_address.province_option_tags }}</select></div>
        <div class="form-group"><label class="form-label" for="address-zip">ZIP / Postal code</label><input type="text" id="address-zip" name="address[zip]" value="{{ form_address.zip }}" class="form-input" required></div>
      </div>
      <div class="form-group"><label class="form-label" for="address-phone">Phone</label><input type="tel" id="address-phone" name="address[phone]" value="{{ form_address.phone }}" class="form-input"></div>
      <div class="form-group"><label style="display:flex;align-items:center;gap:0.5rem"><input type="checkbox" name="address[default]" value="1" {% if form_address.default %}checked{% endif %}> Set as default address</label></div>
      <div style="display:flex;gap:var(--space-4);margin-top:var(--space-6)">
        <button type="submit" class="btn btn--primary">Save address</button>
        <a href="{{ routes.account_addresses_url }}" class="btn btn--secondary">Cancel</a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}{"name":"Address Form","settings":[]}{% endschema %}
