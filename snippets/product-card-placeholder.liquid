<div class="product-card skeleton" style="border-radius:var(--radius-lg);overflow:hidden;border:1px solid var(--color-border)">
  <div style="aspect-ratio:3/4;background:linear-gradient(90deg,var(--color-bg-2) 25%,var(--color-bg-3) 50%,var(--color-bg-2) 75%);background-size:200% 100%;animation:shimmer 1.5s infinite"></div>
  <div style="padding:var(--space-4)">
    <div style="height:12px;background:var(--color-bg-2);border-radius:4px;margin-bottom:var(--space-2);width:60%"></div>
    <div style="height:16px;background:var(--color-bg-2);border-radius:4px;margin-bottom:var(--space-2)"></div>
    <div style="height:14px;background:var(--color-bg-2);border-radius:4px;width:40%"></div>
  </div>
</div>
